<!DOCTYPE html>
<html>
<head>
    <title>Display Menu</title>
    <link rel="stylesheet" type="text/css" href="/css/display_menu.css">
</head>
<body>
    <div class="container">
        <h2>Menu History</h2>
        <% menus.forEach(menu => { %>
            <div class="menu-entry">
                <h3><%= menu.menuName %></h3>
                <% menu.headings.forEach(heading => { %>
                    <div class="heading-entry">
                        <h4><%= heading.heading %></h4>
                        <ul>
                            <% heading.dishes.forEach(dish => { %>
                                <li><%= dish %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% }) %>
                <form action="/delete_menu" method="POST" style="display:inline;">
                    <input type="hidden" name="menuId" value="<%= menu._id %>">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
                <form action="/convert_to_pdf" method="POST" style="display:inline;">
                    <input type="hidden" name="menuId" value="<%= menu.menuName %>">
                    <button type="submit" class="pdf-button">Convert to PDF</button>
                </form>
            </div>
        <% }) %>
    </div>
</body>
</html>
